        <activity
            android:name=".searchresultscreen.SearchResultScreen"
            android:label="@string/title_activity_search_result_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
